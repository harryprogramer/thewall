<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" shutdownHook="true" packages="thewall.engine.tengine.debugger">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false"  pattern="%highlight{[%d{HH:mm:ss}] %t/%-5level] - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, DEBUG=blue bold}"/>
            <!--
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t /%-5level] - %msg%n" />

            <PatternLayout pattern="[%d{HH:mm:ss}] [%t /%-5level] %logger{36} - %msg%n" />
            -->
        </Console>
        <RollingFile name="RollingFile" fileName="${logs}/filename.log" append="false"
                     filePattern="${logs}/filename-%d{yyyy-MM-dd}-%i.log" >
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
        </RollingFile>
        <!--
        <File name="MyFile" fileName="%d{yyy.MM.dd_HH:mm:ss.SSS}.log" append="false">
                <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>

        </File>
        -->
        <TEngineDebugConsoleAppender name="TEngineLoggerAppender"/>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="TEngineLoggerAppender" />
        </Root>

        <Logger name="sun.reflect.Reflection" level="off"/>
    </Loggers>


</Configuration>
